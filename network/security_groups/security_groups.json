{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "v1.0 Security Groups for Infrastructure Services.",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment to create the security group in.",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "14",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "can contain only lower case alphanumeric characters."
    },
    "Vpc": {
      "Description": "VPC for this security group.",
      "Type": "AWS::EC2::VPC::Id"
    },
    "CidrBlock": {
      "Description": "Cidr Address for the VPC to create the instances in.",
      "Type": "String",
      "MinLength": "9",
      "MaxLength": "18"
    },
    "TemplateURLPrefix": {
      "Description": "Template URL prefix for nested stacks.",
      "Type": "String"
    }
  },
  "Outputs": {
    "NTPSecurityGroup": {
      "Value": {
        "Fn::GetAtt": [
          "NTPSecurity",
          "Outputs.SecurityGroup"
        ]
      }
    },
    "NATSecurityGroup": {
      "Value": {
        "Fn::GetAtt": [
          "NATSecurity",
          "Outputs.SecurityGroup"
        ]
      }
    },
    "InternalBastionSecurityGroup": {
      "Value": {
        "Fn::GetAtt": [
          "BastionSecurity",
          "Outputs.InternalSecurityGroup"
        ]
      }
    },
    "ExternalBastionSecurityGroup": {
      "Value": {
        "Fn::GetAtt": [
          "BastionSecurity",
          "Outputs.ExternalSecurityGroup"
        ]
      }
    }
  },
  "Resources": {
    "NATSecurity": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "Vpc": {
            "Ref": "Vpc"
          },
          "CidrBlock": {
            "Ref": "CidrBlock"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "network/security_groups/nat_security.json"
            ]
          ]
        },
        "TimeoutInMinutes": "5"
      }
    },
    "NTPSecurity": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "Vpc": {
            "Ref": "Vpc"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "network/security_groups/ntp_security.json"
            ]
          ]
        },
        "TimeoutInMinutes": "5"
      }
    },
    "BastionSecurity": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "Vpc": {
            "Ref": "Vpc"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "network/security_groups/bastion_security.json"
            ]
          ]
        },
        "TimeoutInMinutes": "5"
      }
    }
  }
}
