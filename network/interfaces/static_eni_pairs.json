{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "v1.0 Creates Pairs of ENI with Static Private IPs",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment to launch these instances into.",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "8",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "Can contain 4 to 8 lower case alphanumeric characters."
    },
    "Role": {
      "Type": "String"
    },
    "Subnets": {
      "Description": "Subnets to associate private routing.",
      "Type": "String"
    },
    "CidrBlockPrefix": {
      "Description": "CidrBlock for this VPC",
      "Type": "String",
      "MinLength": "3",
      "MaxLength": "7",
      "AllowedPattern": "(\\d{1,3})\\.(\\d{1,3})",
      "ConstraintDescription": "Must be the first 2 bytes of a CidrBlock."
    },
    "TemplateURLPrefix": {
      "Description": "URL prefix for this stack.",
      "Type": "String"
    },
    "SecurityGroups": {
      "Type": "String"
    },
    "IpLastDigits": {
      "Type": "List<Number>"
    },
    "NumPairs": {
      "Type": "Number",
      "AllowedValues": [
        "1",
        "2",
        "3"
      ]
    }
  },
  "Conditions": {
    "CreateA": {
      "Fn::Or": [
        {
          "Fn::Equals": [
            {
              "Ref": "NumPairs"
            },
            "1"
          ]
        },
        {
          "Condition": "CreateB"
        }
      ]
    },
    "CreateB": {
      "Fn::Or": [
        {
          "Fn::Equals": [
            {
              "Ref": "NumPairs"
            },
            "2"
          ]
        },
        {
          "Condition": "CreateC"
        }
      ]
    },
    "CreateC": {
      "Fn::Equals": [
        {
          "Ref": "NumPairs"
        },
        "3"
      ]
    }
  },
  "Resources": {
    "NetworkInterfacesPairA": {
      "Type": "AWS::CloudFormation::Stack",
      "Condition": "CreateA",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "Subnets": {
            "Ref": "Subnets"
          },
          "Role": {
            "Ref": "Role"
          },
          "IpLastDigit": {
            "Fn::Select": [
              "0",
              {
                "Ref": "IpLastDigits"
              }
            ]
          },
          "CidrBlockPrefix": {
            "Ref": "CidrBlockPrefix"
          },
          "SecurityGroups": {
            "Ref": "SecurityGroups"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "network/interfaces/static_eni_pair.json"
            ]
          ]
        },
        "TimeoutInMinutes": "10"
      }
    },
    "NetworkInterfacesPairB": {
      "Type": "AWS::CloudFormation::Stack",
      "Condition": "CreateB",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "Subnets": {
            "Ref": "Subnets"
          },
          "Role": {
            "Ref": "Role"
          },
          "IpLastDigit": {
            "Fn::Select": [
              "1",
              {
                "Ref": "IpLastDigits"
              }
            ]
          },
          "CidrBlockPrefix": {
            "Ref": "CidrBlockPrefix"
          },
          "SecurityGroups": {
            "Ref": "SecurityGroups"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "network/interfaces/static_eni_pair.json"
            ]
          ]
        },
        "TimeoutInMinutes": "10"
      }
    },
    "NetworkInterfacesPairC": {
      "Type": "AWS::CloudFormation::Stack",
      "Condition": "CreateC",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "Subnets": {
            "Ref": "Subnets"
          },
          "Role": {
            "Ref": "Role"
          },
          "IpLastDigit": {
            "Fn::Select": [
              "2",
              {
                "Ref": "IpLastDigits"
              }
            ]
          },
          "CidrBlockPrefix": {
            "Ref": "CidrBlockPrefix"
          },
          "SecurityGroups": {
            "Ref": "SecurityGroups"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "network/interfaces/static_eni_pair.json"
            ]
          ]
        },
        "TimeoutInMinutes": "10"
      }
    }
  }
}