{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "v1.0 Creates Pair of ENI with Static Private IPs",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment to launch these instances into.",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "8",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "Can contain 4 to 8 lower case alphanumeric characters."
    },
    "PrivateSubnets": {
      "Description": "Subnets to associate public routing.",
      "Type": "String"
    },
    "CidrBlockPrefix": {
      "Description": "CidrBlock for this VPC",
      "Type": "String",
      "MinLength": "3",
      "MaxLength": "7",
      "AllowedPattern": "(\\d{1,3})\\.(\\d{1,3})",
      "ConstraintDescription": "Must be the first 2 bytes of a CidrBlock."
    },
    "TemplateURLPrefix": {
      "Description": "URL prefix for this stack.",
      "Type": "String"
    },
    "BastionSecurityGroup": {
      "Description": "Security group to allow ssh from bastion instances.",
      "Type": "String"
    },
    "NTPSecurityGroup": {
      "Type": "String"
    },
    "PrivateInternalHostedZone": {
      "Description": "Route53 Private Internal Hosted Zone for VPC.",
      "Type": "String"
    },
    "PrivateInternalDomain": {
      "Type": "String"
    },
    "VpcName": {
      "Description": "Name of the VPC to create services in.",
      "Type": "String",
      "AllowedValues": [
        "infrastructure",
        "application"
      ]
    }
  },
  "Conditions": {
    "CreateNetworkInterfaces": {
      "Fn::Equals": [
        {
          "Ref": "VpcName"
        },
        "infrastructure"
      ]
    }
  },
  "Resources": {
    "NTPNetworkInterfaces": {
      "Condition": "CreateNetworkInterfaces",
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "Subnets": {
            "Ref": "PrivateSubnets"
          },
          "Role": "ntp",
          "IpLastDigit": "5",
          "CidrBlockPrefix": {
            "Ref": "CidrBlockPrefix"
          },
          "SecurityGroups": {
            "Fn::Join": [
              ",",
              [
                {
                  "Ref": "NTPSecurityGroup"
                },
                {
                  "Ref": "BastionSecurityGroup"
                }
              ]
            ]
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "network/interfaces/static_eni_pair.json"
            ]
          ]
        },
        "TimeoutInMinutes": "10"
      }
    },
    "NTPRecordSets": {
      "Condition": "CreateNetworkInterfaces",
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "Role": "ntp",
          "HostedZoneId": {
            "Ref": "PrivateInternalHostedZone"
          },
          "HostedZoneName": {
            "Ref": "PrivateInternalDomain"
          },
          "IpAddresses": {
            "Fn::GetAtt": [
              "NTPNetworkInterfaces",
              "Outputs.IpAddresses"
            ]
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "network/dns/dns_record_sets.json"
            ]
          ]
        },
        "TimeoutInMinutes": "10"
      }
    }
  }
}