{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "v1.0 Creates a Curbot service",
  "Outputs": {
    "ApplicationName": {
      "Value": {
        "Ref": "ApplicationName"
      }
    },
    "PrivateEndPoint": {
      "Value": {
        "Fn::GetAtt": [
          "PrivateDNSRecord",
          "Outputs.EndPoint"
        ]
      }
    },
    "PublicEndPoint": {
      "Value": {
        "Fn::GetAtt": [
          "PublicDNSRecord",
          "Outputs.EndPoint"
        ]
      }
    },
    "Version": {
      "Value": {
        "Ref": "Version"
      }
    },
    "PreviousVersion": {
      "Value": {
        "Ref": "PreviousVersion"
      }
    }
  },
  "Parameters": {
    "ApplicationName": {
      "Type": "String"
    },
    "AvailabilityZones": {
      "Description": "AvailabilityZones to launch networking stacks into.",
      "Type": "String"
    },
    "BaseImageId": {
      "AllowedPattern": "ami-[a-z0-9]{8}",
      "ConstraintDescription": "Must be a valid ami id",
      "Type": "String"
    },
    "DockerRepository": {
      "Type": "String"
    },
    "Environment": {
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "Can contain 4 to 8 lower case alphanumeric characters.",
      "Description": "Name of the environment to launch services into.",
      "MaxLength": "8",
      "MinLength": "4",
      "Type": "String"
    },
    "InfrastructureInternalBastionSecurityGroup": {
      "Type": "String"
    },
    "InfrastructureVPC": {
      "Description": "VPC to launch this subnet into.",
      "Type": "AWS::EC2::VPC::Id"
    },
    "InfrastructureVPCPrivateSubnets": {
      "Description": "Subnets to launch app into.",
      "Type": "String"
    },
    "InfrastructureVPCPublicSubnets": {
      "Description": "Subnets to launch app into.",
      "Type": "String"
    },
    "LogglyToken": {
      "Type": "String"
    },
    "NewRelicToken": {
      "Type": "String"
    },
    "PreviousVersion": {
      "Default": "latest",
      "Type": "String"
    },
    "PrivateInternalDomain": {
      "Type": "String"
    },
    "PrivateInternalHostedZone": {
      "Description": "Route53 Private Internal Hosted Zone for VPC.",
      "Type": "String"
    },
    "PublicExternalDomain": {
      "Type": "String"
    },
    "PublicExternalHostedZone": {
      "Description": "Route53 Private Internal Hosted Zone for VPC.",
      "Type": "String"
    },
    "Serial": {
      "Default": "0",
      "Type": "String"
    },
    "TemplateURLPrefix": {
      "Type": "String"
    },
    "Version": {
      "Default": "latest",
      "Type": "String"
    }
  },
  "Resources": {
    "InstanceProfile": {
      "Properties": {
        "Parameters": {
          "ApplicationName": {
            "Ref": "ApplicationName"
          },
          "Environment": {
            "Ref": "Environment"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "services/web/web_profile.json"
            ]
          ]
        },
        "TimeoutInMinutes": "5"
      },
      "Type": "AWS::CloudFormation::Stack"
    },
    "Instances": {
      "Properties": {
        "Parameters": {
          "ApplicationName": {
            "Ref": "ApplicationName"
          },
          "AvailabilityZones": {
            "Ref": "AvailabilityZones"
          },
          "Cooldown": "30",
          "DeployMaxBatchSize": "1",
          "DeployMinInstancesInService": "1",
          "DesiredCapacity": "1",
          "DockerRepository": {
            "Ref": "DockerRepository"
          },
          "Environment": {
            "Ref": "Environment"
          },
          "HealthCheckGracePeriod": "400",
          "ImageId": {
            "Ref": "BaseImageId"
          },
          "InstanceHealthCheck": "/health",
          "InstancePort": "8080",
          "InstanceProfile": {
            "Fn::GetAtt": [
              "InstanceProfile",
              "Outputs.InstanceProfile"
            ]
          },
          "InstanceSecurityGroups": {
            "Fn::Join": [
              ",",
              [
                {
                  "Fn::GetAtt": [
                    "Security",
                    "Outputs.InstanceSecurityGroup"
                  ]
                },
                {
                  "Ref": "InfrastructureInternalBastionSecurityGroup"
                }
              ]
            ]
          },
          "InstanceSubnets": {
            "Ref": "InfrastructureVPCPrivateSubnets"
          },
          "InstanceType": "m3.medium",
          "LoadBalancerPort": "443",
          "LoadBalancerSecurityGroup": {
            "Fn::GetAtt": [
              "Security",
              "Outputs.LoadBalancerSecurityGroup"
            ]
          },
          "LoadBalancerSubnets": {
            "Ref": "InfrastructureVPCPublicSubnets"
          },
          "LogglyToken": {
            "Ref": "LogglyToken"
          },
          "MaxSize": "2",
          "MinSize": "1",
          "NewRelicToken": {
            "Ref": "NewRelicToken"
          },
          "Scheme": "internet-facing",
          "Serial": {
            "Ref": "Serial"
          },
          "TemplateURLPrefix": {
            "Ref": "TemplateURLPrefix"
          },
          "UpdatePauseTime": "PT5M",
          "UserData": {
            "Fn::Join": [
              "",
              [
                "\ncurl http://consul.",
                {
                  "Ref": "PrivateInternalDomain"
                },
                "/v1/kv/userdata/web/script?raw | sh"
              ]
            ]
          },
          "Version": {
            "Ref": "Version"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "services/web/web_autoscaling.json"
            ]
          ]
        },
        "TimeoutInMinutes": "10"
      },
      "Type": "AWS::CloudFormation::Stack"
    },
    "PrivateDNSRecord": {
      "Properties": {
        "Parameters": {
          "ApplicationName": {
            "Ref": "ApplicationName"
          },
          "Environment": {
            "Ref": "Environment"
          },
          "HostedZoneId": {
            "Ref": "PrivateInternalHostedZone"
          },
          "HostedZoneName": {
            "Ref": "PrivateInternalDomain"
          },
          "LoadBalancerCanonicalHostedZoneNameID": {
            "Fn::GetAtt": [
              "Instances",
              "Outputs.CanonicalHostedZoneNameID"
            ]
          },
          "LoadBalancerDNSHostedZoneName": {
            "Fn::GetAtt": [
              "Instances",
              "Outputs.DNSHostedZoneName"
            ]
          },
          "LoadBalancerScheme": "internet-facing"
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "services/web/web_record_set.json"
            ]
          ]
        },
        "TimeoutInMinutes": "5"
      },
      "Type": "AWS::CloudFormation::Stack"
    },
    "PublicDNSRecord": {
      "Properties": {
        "Parameters": {
          "ApplicationName": {
            "Ref": "ApplicationName"
          },
          "Environment": {
            "Ref": "Environment"
          },
          "HostedZoneId": {
            "Ref": "PublicExternalHostedZone"
          },
          "HostedZoneName": {
            "Ref": "PublicExternalDomain"
          },
          "LoadBalancerCanonicalHostedZoneNameID": {
            "Fn::GetAtt": [
              "Instances",
              "Outputs.CanonicalHostedZoneNameID"
            ]
          },
          "LoadBalancerDNSHostedZoneName": {
            "Fn::GetAtt": [
              "Instances",
              "Outputs.DNSHostedZoneName"
            ]
          },
          "LoadBalancerScheme": "internet-facing"
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "services/web/web_record_set.json"
            ]
          ]
        },
        "TimeoutInMinutes": "5"
      },
      "Type": "AWS::CloudFormation::Stack"
    },
    "Security": {
      "Properties": {
        "Parameters": {
          "ApplicationName": {
            "Ref": "ApplicationName"
          },
          "Environment": {
            "Ref": "Environment"
          },
          "LoadBalancerPort": "443",
          "Vpc": {
            "Ref": "InfrastructureVPC"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "services/web/web_security.json"
            ]
          ]
        },
        "TimeoutInMinutes": "5"
      },
      "Type": "AWS::CloudFormation::Stack"
    }
  }
}