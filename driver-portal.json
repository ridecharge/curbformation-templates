{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "v1.0 Creates a Driver Portal service",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment to launch services into.",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "8",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "Can contain 4 to 8 lower case alphanumeric characters."
    },
    "AvailabilityZones": {
      "Description": "AvailabilityZones to launch networking stacks into.",
      "Type": "String"
    },
    "ApplicationName": {
      "Type": "String"
    },
    "LogglyToken": {
      "Type": "String"
    },
    "NewRelicToken": {
      "Type": "String"
    },
    "PrivateInternalHostedZone": {
      "Description": "Route53 Private Internal Hosted Zone for VPC.",
      "Type": "String"
    },
    "PrivateInternalDomain": {
      "Type": "String"
    },
    "PublicExternalHostedZone": {
      "Description": "Route53 Private Internal Hosted Zone for VPC.",
      "Type": "String"
    },
    "PublicExternalDomain": {
      "Type": "String"
    },
    "ApplicationVPCPublicSubnets": {
      "Description": "Subnets to launch app into.",
      "Type": "String"
    },
    "ApplicationVPCPrivateSubnets": {
      "Description": "Subnets to launch app into.",
      "Type": "String"
    },
    "ApplicationVPC": {
      "Description": "VPC to launch this subnet into.",
      "Type": "AWS::EC2::VPC::Id"
    },
    "TemplateURLPrefix": {
      "Type": "String"
    },
    "ApplicationInternalBastionSecurityGroup": {
      "Type": "String"
    },
    "BaseImageId": {
      "Type": "String",
      "AllowedPattern": "ami-[a-z0-9]{8}",
      "ConstraintDescription": "Must be a valid ami id"
    },
    "LoadBalancerScheme": {
      "Type": "String",
      "Default": "internet-facing"
    },
    "LoadBalancerPort": {
      "Type": "Number",
      "Default": "443"
    },
    "Version": {
      "Type": "String",
      "Default": "0.0.7"
    }
  },
  "Outputs": {
    "ApplicationName": {
      "Value": {
        "Ref": "ApplicationName"
      }
    },
    "Version": {
      "Value": {
        "Ref": "Version"
      }
    },
    "PublicEndPoint": {
      "Value": {
        "Fn::GetAtt": [
          "PublicDNSRecord",
          "Outputs.EndPoint"
        ]
      }
    },
    "PrivateEndPoint": {
      "Value": {
        "Fn::GetAtt": [
          "PrivateDNSRecord",
          "Outputs.EndPoint"
        ]
      }
    }
  },
  "Resources": {
    "Security": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "Vpc": {
            "Ref": "ApplicationVPC"
          },
          "ApplicationName": {
            "Ref": "ApplicationName"
          },
          "LoadBalancerPort": "443"
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "services/web/web_security.json"
            ]
          ]
        },
        "TimeoutInMinutes": "5"
      }
    },
    "StorageBuckets": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "ApplicationName": {
            "Ref": "ApplicationName"
          },
          "TemplateURLPrefix": {
            "Ref": "TemplateURLPrefix"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "services/web/s3/buckets.json"
            ]
          ]
        },
        "TimeoutInMinutes": "5"
      }
    },
    "InstanceProfile": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "ApplicationName": {
            "Ref": "ApplicationName"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "services/web/web_profile.json"
            ]
          ]
        },
        "TimeoutInMinutes": "5"
      }
    },
    "PrivateDNSRecord": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "ApplicationName": {
            "Ref": "ApplicationName"
          },
          "HostedZoneId": {
            "Ref": "PrivateInternalHostedZone"
          },
          "HostedZoneName": {
            "Ref": "PrivateInternalDomain"
          },
          "LoadBalancerScheme": {
            "Ref": "LoadBalancerScheme"
          },
          "LoadBalancerCanonicalHostedZoneNameID": {
            "Fn::GetAtt": [
              "Instances",
              "Outputs.CanonicalHostedZoneNameID"
            ]
          },
          "LoadBalancerDNSHostedZoneName": {
            "Fn::GetAtt": [
              "Instances",
              "Outputs.DNSHostedZoneName"
            ]
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "services/web/web_record_set.json"
            ]
          ]
        },
        "TimeoutInMinutes": "5"
      }
    },
    "PublicDNSRecord": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "ApplicationName": {
            "Ref": "ApplicationName"
          },
          "HostedZoneId": {
            "Ref": "PublicExternalHostedZone"
          },
          "HostedZoneName": {
            "Ref": "PublicExternalDomain"
          },
          "LoadBalancerScheme": {
            "Ref": "LoadBalancerScheme"
          },
          "LoadBalancerCanonicalHostedZoneNameID": {
            "Fn::GetAtt": [
              "Instances",
              "Outputs.CanonicalHostedZoneNameID"
            ]
          },
          "LoadBalancerDNSHostedZoneName": {
            "Fn::GetAtt": [
              "Instances",
              "Outputs.DNSHostedZoneName"
            ]
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "services/web/web_record_set.json"
            ]
          ]
        },
        "TimeoutInMinutes": "5"
      }
    },
    "Instances": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "LogglyToken": {
            "Ref": "LogglyToken"
          },
          "InstanceSecurityGroups": {
            "Fn::Join": [
              ",",
              [
                {
                  "Fn::GetAtt": [
                    "Security",
                    "Outputs.InstanceSecurityGroup"
                  ]
                },
                {
                  "Ref": "ApplicationInternalBastionSecurityGroup"
                }
              ]
            ]
          },
          "InstanceProfile": {
            "Fn::GetAtt": [
              "InstanceProfile",
              "Outputs.InstanceProfile"
            ]
          },
          "LoadBalancerSecurityGroup": {
            "Fn::GetAtt": [
              "Security",
              "Outputs.LoadBalancerSecurityGroup"
            ]
          },
          "ApplicationName": {
            "Ref": "ApplicationName"
          },
          "AvailabilityZones": {
            "Ref": "AvailabilityZones"
          },
          "LoadBalancerSubnets": {
            "Ref": "ApplicationVPCPublicSubnets"
          },
          "InstanceSubnets": {
            "Ref": "ApplicationVPCPrivateSubnets"
          },
          "NewRelicToken": {
            "Ref": "NewRelicToken"
          },
          "Scheme": {
            "Ref": "LoadBalancerScheme"
          },
          "InstanceType": "m3.medium",
          "ImageId": {
            "Ref": "BaseImageId"
          },
          "MinSize": "2",
          "MaxSize": "2",
          "DesiredCapacity": "2",
          "DeployMaxBatchSize": "1",
          "DeployMinInstancesInService": "1",
          "InstancePort": "8080",
          "InstanceHealthCheck": "/heartbeat",
          "LoadBalancerPort": "443",
          "HealthCheckGracePeriod": "300",
          "Cooldown": "30",
          "UserData": {
            "Fn::Join": [
              "",
              [
                "docker run -d --name ",
                {
                  "Ref": "ApplicationName"
                },
                " --link consul:consul ridecharge/",
                {
                  "Ref": "ApplicationName"
                },
                ":",
                {
                  "Ref": "Version"
                },
                "\ndocker run -d --name nginx ",
                "-e SERVICE_NAME=",
                {
                  "Ref": "ApplicationName"
                },
                " --link ",
                {
                  "Ref": "ApplicationName"
                },
                ":app --link consul:consul --link logging:logging ",
                "-p 8080:8080 ridecharge/nginx\n"
              ]
            ]
          },
          "TemplateURLPrefix": {
            "Ref": "TemplateURLPrefix"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "services/web/web_autoscaling.json"
            ]
          ]
        },
        "TimeoutInMinutes": "10"
      }
    }
  }
}