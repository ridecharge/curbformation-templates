{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "S3 Setup v1.0",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment to create s3 buckets in.",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "14",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "can contain only lower case alphanumeric characters."
    },
    "ApplicationName": {
      "Type": "String"
    }
  },
  "Outputs": {
    "PublicBucket": {
      "Value": {
        "Fn::GetAtt": [
          "PublicBucket",
          "Outputs.BucketName"
        ]
      }
    },
    "PrivateBucket": {
      "Value": {
        "Fn::GetAtt": [
          "PublicBucket",
          "Outputs.BucketName"
        ]
      }
    }
  },
  "Resources": {
    "LogBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "LogDeliveryWrite",
        "BucketName": {
          "Fn::Join": [
            "-",
            [
              {"Ref": "Environment"},
              {"Ref": "ApplicationName"},
              "logs"
            ]
          ]
        },
        "Tags": [
          {
            "Key": "Application",
            "Value": {"Ref": "ApplicationName"}
          },
          {
            "Key": "Environment",
            "Value": {"Ref": "Environment"}
          },
          {
            "Key": "Role",
            "Value": "aws-logs"
          }
        ]
      }
    },
    "PublicBucket": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "ApplicationName": {"Ref": "ApplicationName"},
          "AccessType": "public",
          "LogBucket": {"Ref": "LogBucket"}
        },
        "TemplateURL": {
          "Fn::Join": [
            "-",
            [
              "https://s3.amazonaws.com/curbformation",
              {
                "Ref": "Environment"
              },
              "templates/apps/components/s3/storage_buckets.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    },
    "PrivateBucket": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {"Ref": "Environment"},
          "ApplicationName": {"Ref": "ApplicationName"},
          "AccessType": "private",
          "LogBucket": {"Ref": "LogBucket"}
        },
        "TemplateURL": {
          "Fn::Join": [
            "-",
            [
              "https://s3.amazonaws.com/curbformation",
              {
                "Ref": "Environment"
              },
              "templates/apps/components/s3/storage_buckets.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    }
  }
}

