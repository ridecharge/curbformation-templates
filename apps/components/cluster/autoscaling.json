{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Cluster Autoscaling Groups Setup v1.0",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment to create the security groups in.",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "14",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "can contain only lowercase alphanum."
    },
    "Vpc": {
      "Description": "VPC to launch this subnet into.",
      "Type": "AWS::EC2::VPC::Id"
    },
    "LoadBalancerPort": {
      "Type": "Number",
      "Default": "80"
    },
    "InstancePort": {
      "Type": "Number",
      "Default": "8080"
    },
    "ApplicationName": {
      "Type": "String"
    }
  },
  "Resources":{
    "AutoScalingGroup":{
      "Type" : "AWS::AutoScaling::AutoScalingGroup",
      "Properties" : {
        "DesiredCapacity" : "2",
        "HealthCheckGracePeriod" : Integer,
        "HealthCheckType" : String,
        "LaunchConfigurationName" : String,
        "LoadBalancerNames" : [ String, ... ],
        "MaxSize" : String,
        "MetricsCollection" : [ MetricsCollection, ... ]
        "MinSize" : String,
        "NotificationConfiguration" : NotificationConfiguration,
        "PlacementGroup" : String,
        "Tags" : [ Auto Scaling Tag, ..., ],
        "TerminationPolicies" : [ String, ..., ],
        "VPCZoneIdentifier" : [ String, ... ]
      }
    }
  }
}
