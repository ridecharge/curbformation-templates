{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Cluster Security Groups Setup v1.0",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment to create the security groups in.",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "14",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "can contain only lowercase alphanum."
    },
    "Vpc": {
      "Description": "VPC to launch this subnet into.",
      "Type": "AWS::EC2::VPC::Id"
    },
    "LoadBalancerPort": {
      "Type": "Number",
      "Default": "80"
    },
    "InstancePort": {
      "Type": "Number",
      "Default": "8080"
    },
    "ApplicationName": {
      "Type": "String"
    }
  },
  "Outputs": {
    "InstanceSecurityGroup": {
      "Value": {
        "Ref": "InstanceSecurityGroup"
      }
    },
    "LoadBalancerSecurityGroup": {
      "Value": {
        "Ref": "LoadBalancerSecurityGroup"
      }
    }
  },
  "Resources": {
    "InstanceSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Application Cluster Security Group",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": {"Ref": "InstancePort"},
            "ToPort": {"Ref": "InstancePort"},
            "SourceSecurityGroupId": {"Ref": "LoadBalancerSecurityGroup"}
          }
        ],
        "Tags": [
          {
            "Key": "Role",
            "Value": "Database Security"
          },
          {
            "Key": "Environment",
            "Value": {"Ref": "Environment"}
          },
          {
            "Key": "Application",
            "Value": {"Ref": "ApplicationName"}
          }
        ],
        "VpcId": {"Ref": "Vpc"}
      }
    },
    "LoadBalancerSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Application ELB Security Group",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "CidrIp": "0.0.0.0/0",
            "FromPort": {"Ref": "LoadBalancerPort"},
            "ToPort": {"Ref": "LoadBalancerPort"}
          }
        ],
        "Tags": [
          {
            "Key": "Role",
            "Value": "LoadBalancer Security"
          },
          {
            "Key": "Environment",
            "Value": {"Ref": "Environment"}
          },
          {
            "Key": "Application",
            "Value": {"Ref": "ApplicationName"}
          }
        ],
        "VpcId": {"Ref": "Vpc"}
      }
    }
  }
}
