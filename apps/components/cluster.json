{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Cluster Setup v1.0",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment to launch into.",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "14",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "can contain only lower case alphanumeric."
    },
    "ApplicationName": {
      "Type": "String"
    },
    "Vpc": {
      "Description": "VPC to launch this subnet into.",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Outputs": {
    "LoadBalancerSecurityGroup": {
      "Value": {
        "Fn::GetAtt": [
          "ClusterSecurityGroups",
          "Outputs.LoadBalancerSecurityGroup"
        ]
      }
    },
    "InstanceSecurityGroup": {
      "Value": {
        "Fn::GetAtt": [
          "ClusterSecurityGroups",
          "Outputs.InstanceSecurityGroup"
        ]
      }
    }
  },
  "Resources": {
    "ClusterSecurityGroups": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "ApplicationName": {"Ref": "ApplicationName"},
          "Environment": {"Ref": "Environment"},
          "Vpc": {"Ref": "Vpc"}
        },
        "TemplateURL": {
          "Fn::Join": [
            "-",
            [
              "https://s3.amazonaws.com/curbformation",
              {
                "Ref": "Environment"
              },
              "templates/apps/components/cluster/security_groups.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    },
    "LoadBalancer": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "ApplicationName": {"Ref": "ApplicationName"},
          "Environment": {"Ref": "Environment"},
          "Vpc": {"Ref": "Vpc"}
        },
        "TemplateURL": {
          "Fn::Join": [
            "-",
            [
              "https://s3.amazonaws.com/curbformation",
              {
                "Ref": "Environment"
              },
              "templates/apps/components/cluster/security_groups.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    }
  }
}

