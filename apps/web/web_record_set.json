{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "v1.0 Creates Route53 Record Sets for role.",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment for hosted zones.",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "8",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "Can contain 4 to 8 lower case alphanumeric characters."
    },
    "ApplicationName": {
      "Type": "String"
    },
    "HostedZoneName": {
      "Type": "String"
    },
    "HostedZoneId": {
      "Type": "String"
    },
    "LoadBalancerDNSName": {
      "Type": "String"
    },
    "LoadBalancerScheme": {
      "Type": "String",
      "AllowedValues": [
        "internal",
        "internet-facing"
      ]
    }
  },
  "Outputs": {
    "EndPoint": {
      "Value": {
        "Fn::If": [
          "CreateCname",
          {
            "Ref": "CnameRecordSet"
          },
          {
            "Ref": "AliasRecordSet"
          }
        ]
      }
    }
  },
  "Conditions": {
    "CreateCname": {
      "Fn::Equals": [
        {
          "Ref": "LoadBalancerScheme"
        },
        "internal"
      ]
    },
    "CreateAlias": {
      "Fn::Equals": [
        {
          "Ref": "LoadBalancerScheme"
        },
        "internet-facing"
      ]
    }
  },
  "Resources": {
    "CnameRecordSet": {
      "Condition": "CreateCname",
      "Type": "AWS::Route53::RecordSet",
      "Properties": {
        "Type": "CNAME",
        "TTL": "900",
        "HostedZoneId": {
          "Ref": "HostedZoneId"
        },
        "Comment": {
          "Fn::Join": [
            " ",
            [
              {
                "Ref": "ApplicationName"
              },
              "LoadBalancer CNAME Record"
            ]
          ]
        },
        "Name": {
          "Fn::Join": [
            "",
            [
              {
                "Ref": "ApplicationName"
              },
              ".",
              {
                "Ref": "HostedZoneName"
              },
              "."
            ]
          ]
        },
        "ResourceRecords": [
          {
            "Ref": "LoadBalancerDNSName"
          }
        ]
      }
    },
    "AliasRecordSet": {
      "Condition": "CreateAlias",
      "Type": "AWS::Route53::RecordSet",
      "Properties": {
        "AliasTarget": {
          "DNSName": {
            "Ref": "LoadBalancerDNSName"
          },
          "EvaluateTargetHealth": true,
          "HostedZoneId": {
            "Ref": "HostedZoneId"
          }
        },
        "HostedZoneId": {
          "Ref": "HostedZoneId"
        },
        "Comment": {
          "Fn::Join": [
            " ",
            [
              {
                "Ref": "ApplicationName"
              },
              "LoadBalancer Alias Record"
            ]
          ]
        },
        "Name": {
          "Fn::Join": [
            "",
            [
              {
                "Ref": "ApplicationName"
              },
              ".",
              {
                "Ref": "HostedZoneName"
              },
              "."
            ]
          ]
        },
        "Type": "A"
      }
    }
  }
}