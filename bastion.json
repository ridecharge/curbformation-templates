{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "v1.0 Creates Bastion services.",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment to launch services into.",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "8",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "Can contain 4 to 8 lower case alphanumeric characters."
    },
    "AvailabilityZones": {
      "Description": "AvailabilityZones to launch networking stacks into.",
      "Type": "String"
    },
    "InfrastructureExternalBastionSecurityGroup": {
      "Type": "String"
    },
    "ApplicationExternalBastionSecurityGroup": {
      "Type": "String"
    },
    "DockerRepository": {
      "Type": "String"
    },
    "PrivateInternalDomain": {
      "Type": "String"
    },
    "ApplicationName": {
      "Type": "String"
    },
    "LogglyToken": {
      "Type": "String"
    },
    "NewRelicToken": {
      "Type": "String"
    },
    "InfrastructureVPCPrivateSubnets": {
      "Description": "Subnets to launch app into.",
      "Type": "String"
    },
    "InfrastructureInternalBastionSecurityGroup": {
      "Type": "String"
    },
    "ApplicationVPCPrivateSubnets": {
      "Description": "Subnets to launch app into.",
      "Type": "String"
    },
    "ApplicationInternalBastionSecurityGroup": {
      "Type": "String"
    },
    "TemplateURLPrefix": {
      "Type": "String"
    },
    "BaseImageId": {
      "Type": "String",
      "AllowedPattern": "ami-[a-z0-9]{8}",
      "ConstraintDescription": "Must be a valid ami id"
    },
    "Serial": {
      "Type": "String",
      "Default": "0"
    }
  },
  "Outputs": {
    "ApplicationName": {
      "Value": {
        "Ref": "ApplicationName"
      }
    },
    "Version": {
      "Value": {
        "Ref": "BaseImageId"
      }
    },
    "PreviousVersion": {
      "Value": {
        "Ref": "BaseImageId"
      }
    }
  },
  "Resources": {
    "InstanceProfile": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "services/profiles/eni_attach_profile.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    },
    "InfrastructureInstances": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "UserData": {
            "Fn::Join": [
              "",
              [
                "curl http://consul.",
                {
                  "Ref": "PrivateInternalDomain"
                },
                "/v1/kv/userdata/eni/script?raw | sh"
              ]
            ]
          },
          "Serial": {
            "Ref": "Serial"
          },
          "Role": {
            "Ref": "ApplicationName"
          },
          "Subnets": {
            "Ref": "InfrastructureVPCPrivateSubnets"
          },
          "InstanceProfile": {
            "Fn::GetAtt": [
              "InstanceProfile",
              "Outputs.InstanceProfile"
            ]
          },
          "NewRelicToken": {
            "Ref": "NewRelicToken"
          },
          "VpcName": "infrastructure",
          "SecurityGroups": {
            "Ref": "InfrastructureExternalBastionSecurityGroup"
          },
          "AvailabilityZones": {
            "Ref": "AvailabilityZones"
          },
          "ImageId": {
            "Ref": "BaseImageId"
          },
          "LogglyToken": {
            "Ref": "LogglyToken"
          },
          "DockerRepository": {
            "Ref": "DockerRepository"
          },
          "TemplateURLPrefix": {
            "Ref": "TemplateURLPrefix"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "services/infra/infra_autoscaling.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    },
    "ApplicationInstances": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "UserData": {
            "Fn::Join": [
              "",
              [
                "curl http://consul.",
                {
                  "Ref": "PrivateInternalDomain"
                },
                "/v1/kv/userdata/eni/script?raw | sh"
              ]
            ]
          },
          "Role": {
            "Ref": "ApplicationName"
          },
          "Subnets": {
            "Ref": "ApplicationVPCPrivateSubnets"
          },
          "InstanceProfile": {
            "Fn::GetAtt": [
              "InstanceProfile",
              "Outputs.InstanceProfile"
            ]
          },
          "Serial": {
            "Ref": "Serial"
          },
          "NewRelicToken": {
            "Ref": "NewRelicToken"
          },
          "VpcName": "application",
          "SecurityGroups": {
            "Ref": "ApplicationExternalBastionSecurityGroup"
          },
          "AvailabilityZones": {
            "Ref": "AvailabilityZones"
          },
          "ImageId": {
            "Ref": "BaseImageId"
          },
          "LogglyToken": {
            "Ref": "LogglyToken"
          },
          "DockerRepository": {
            "Ref": "DockerRepository"
          },
          "TemplateURLPrefix": {
            "Ref": "TemplateURLPrefix"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "services/infra/infra_autoscaling.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    }
  }
}