{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "v1.0 Creates Instance Profiles for Services.",
  "Parameters": {
    "TemplateURLPrefix": {
      "Description": "Template URL prefix for nested stacks.",
      "Type": "String"
    },
    "Environment": {
      "Description": "Name of the environment to create the security group in.",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "14",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "can contain only lower case alphanumeric characters."
    },
    "PrivateInternalHostedZone": {
      "Description": "Route53 Private Internal Hosted Zone for VPC.",
      "Type": "String"
    },
    "PublicInternalHostedZone": {
      "Description": "Route53 Public Internal Hosted Zone for VPC.",
      "Type": "String"
    },
    "PublicExternalHostedZone": {
      "Description": "Route53 Public External Hosted Zone for VPC.",
      "Type": "String"
    }
  },
  "Outputs": {
    "PublicExternalHostedZoneInstanceProfile": {
      "Value": {
        "Fn::GetAtt": [
          "PublicExternalHostedZoneInstanceProfile",
          "Outputs.InstanceProfile"
        ]
      }
    },
    "PrivateInternalHostedZoneInstanceProfile": {
      "Value": {
        "Fn::GetAtt": [
          "PrivateInternalHostedZoneInstanceProfile",
          "Outputs.InstanceProfile"
        ]
      }
    },
    "PublicInternalHostedZoneInstanceProfile": {
      "Value": {
        "Fn::GetAtt": [
          "PublicInternalHostedZoneInstanceProfile",
          "Outputs.InstanceProfile"
        ]
      }
    },
    "NATInstanceProfile": {
      "Value": {
        "Fn::GetAtt": [
          "NATInstanceProfile",
          "Outputs.InstanceProfile"
        ]
      }
    },
    "ENIAttachInstanceProfile": {
      "Value": {
        "Fn::GetAtt": [
          "ENIAttachInstanceProfile",
          "Outputs.InstanceProfile"
        ]
      }
    }
  },
  "Resources": {
    "PublicExternalHostedZoneInstanceProfile": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "HostedZone": {
            "Ref": "PublicExternalHostedZone"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "infra/instance_profiles/hosted_zone_profile.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    },
    "PrivateInternalHostedZoneInstanceProfile": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "HostedZone": {
            "Ref": "PrivateInternalHostedZone"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "infra/instance_profiles/hosted_zone_profile.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    },
    "PublicInternalHostedZoneInstanceProfile": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "HostedZone": {
            "Ref": "PublicInternalHostedZone"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "infra/instance_profiles/hosted_zone_profile.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    },
    "NATInstanceProfile": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "infra/instance_profiles/nat_profile.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    },
    "ENIAttachInstanceProfile": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "infra/instance_profiles/eni_attach_profile.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    }
  }
}
