{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "v1.0 Creates NAT Instances.",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment to launch these instances into.",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "8",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "Can contain 4 to 8 lower case alphanumeric characters."
    },
    "TemplateURLPrefix": {
      "Description": "URL prefix for this stack.",
      "Type": "String"
    },
    "Vpc": {
      "Description": "VPC for this nat.",
      "Type": "AWS::EC2::VPC::Id"
    },
    "VpcName": {
      "Description": "Name of the vpc this nat is created in.",
      "Type": "String"
    },
    "PublicSubnets": {
      "Description": "Subnets to associate public routing.",
      "Type": "String"
    },
    "AvailabilityZones": {
      "Description": "AvailabilityZones to launch networking stacks into.",
      "Type": "String"
    },
    "PublicInternalHostedZone": {
      "Description": "Route53 Public Internal Hosted Zone for VPC.",
      "Type": "String"
    },
    "PublicInternalDomain": {
      "Description": "Route53 Public Internal Domain for VPC.",
      "Type": "String"
    },
    "PublicExternalDomain": {
      "Description": "Route53 Public External Domain for VPC.",
      "Type": "String"
    },
    "BastionSecurityGroup": {
      "Description":"Security group to allow ssh from bastion instancse.",
      "Type": "String"
    },
    "NATSecurityGroup": {
      "Type": "String"
    },
    "NATInstanceProfile":{
      "Type":"String"
    },
    "ImageId": {
      "Description": "AMI for NAT Instances",
      "Type": "String",
      "AllowedPattern": "ami-[a-z0-9]{8}",
      "ConstraintDescription": "Must be a valid ami id"
    }
  },
  "Resources": {
    "NATInstances": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "PublicInternalHostedZone": {"Ref": "PublicInternalHostedZone"},
          "InstanceProfile": {
            "Ref":"NATInstanceProfile"
          },
          "PublicInternalDomain": {
            "Ref": "PublicInternalDomain"
          },
          "PublicExternalDomain": {
            "Ref": "PublicExternalDomain"
          },
          "UserData": {
            "Fn::Join": [
              "\n",
              [
                "#!/bin/bash",
                "service iptables-persistent start",
                "docker run -d --restart=always -e LOGGLY_TOKEN=e8bcd155-264b-4ec0-88be-fcb023f76a89 sgarlick987/aws-startup-utils ./nat_monitor.py"
              ]
            ]
          },
          "SecurityGroups": {
            "Fn::Join": [
              ",",
              [
                {
                  "Ref":"NATSecurityGroup"
                },
                {"Ref": "BastionSecurityGroup"}
              ]
            ]
          },
          "Subnets": {
            "Ref": "PublicSubnets"
          },
          "AvailabilityZones": {
            "Ref": "AvailabilityZones"
          },
          "VpcName": {
            "Ref": "VpcName"
          },
          "ImageId": {"Ref": "ImageId"},
          "Type": "NAT"
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "infra/autoscaling/autoscaling_pair.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    }
  }
}
