{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "S3 Setup v1.0",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment to create s3 buckets in.",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "14",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "can contain only lower case alphanumeric characters."
    },
    "ApplicationName": {
      "Type": "String"
    },
    "BucketTypes": {
      "Type": "String",
      "Default": "both",
      "AllowedValues": [
        "both",
        "private",
        "public"
      ]
    }
  },
  "Conditions": {
    "CreateBothBuckets": {
      "Fn::Equals": [
        {
          "Ref": "BucketTypes"
        },
        "both"
      ]
    },
    "CreatePublicBucket": {
      "Fn::Or": [
        {
          "Condition": "CreateBothBuckets"
        },
        {
          "Fn::Equals": [
            {
              "Ref": "BucketTypes"
            },
            "public"
          ]
        }
      ]
    },
    "CreatePrivateBucket": {
      "Fn::Or": [
        {
          "Condition": "CreateBothBuckets"
        },
        {
          "Fn::Equals": [
            {
              "Ref": "BucketTypes"
            },
            "private"
          ]
        }
      ]
    }
  },
  "Outputs": {
    "PublicBucket": {
      "Condition": "CreatePublicBucket",
      "Value": {
        "Fn::GetAtt": [
          "PublicBucket",
          "Outputs.BucketName"
        ]
      }
    },
    "PrivateBucket": {
      "Condition": "CreatePrivateBucket",
      "Value": {
        "Fn::GetAtt": [
          "PublicBucket",
          "Outputs.BucketName"
        ]
      }
    }
  },
  "Resources": {
    "LogBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "LogDeliveryWrite",
        "BucketName": {
          "Fn::Join": [
            "-",
            [
              {
                "Ref": "Environment"
              },
              {
                "Ref": "ApplicationName"
              },
              "logs"
            ]
          ]
        },
        "Tags": [
          {
            "Key": "Application",
            "Value": {
              "Ref": "ApplicationName"
            }
          },
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            }
          },
          {
            "Key": "Role",
            "Value": "Logs"
          }
        ]
      }
    },
    "PublicBucket": {
      "Condition": "CreatePublicBucket",
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "ApplicationName": {
            "Ref": "ApplicationName"
          },
          "AccessType": "public",
          "LogBucket": {
            "Ref": "LogBucket"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "-",
            [
              "https://s3.amazonaws.com/curbformation",
              {
                "Ref": "Environment"
              },
              "templates/apps/components/s3/storage_buckets.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    },
    "PrivateBucket": {
      "Condition": "CreatePrivateBucket",
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "ApplicationName": {
            "Ref": "ApplicationName"
          },
          "AccessType": "private",
          "LogBucket": {
            "Ref": "LogBucket"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "-",
            [
              "https://s3.amazonaws.com/curbformation",
              {
                "Ref": "Environment"
              },
              "templates/apps/components/s3/storage_buckets.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    }
  }
}