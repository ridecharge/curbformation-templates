{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "v1.0 Creates a ETCD service",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment to launch services into.",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "8",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "Can contain 4 to 8 lower case alphanumeric characters."
    },
    "AvailabilityZones": {
      "Description": "AvailabilityZones to launch networking stacks into.",
      "Type": "String"
    },
    "ApplicationName": {
      "Type": "String"
    },
    "LogglyToken": {
      "Type": "String"
    },
    "NewRelicToken": {
      "Type": "String"
    },
    "InfrastructureVPCPrivateSubnets": {
      "Description": "Subnets to launch app into.",
      "Type": "String"
    },
    "InfrastructureVPC": {
      "Description": "VPC to launch this subnet into.",
      "Type": "AWS::EC2::VPC::Id"
    },
    "TemplateURLPrefix": {
      "Type": "String"
    },
    "InfrastructureInternalBastionSecurityGroup": {
      "Type": "String"
    }
  },
  "Resources": {
    "Security": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "Vpc": {
            "Ref": "InfrastructureVPC"
          },
          "ApplicationName": {
            "Ref": "ApplicationName"
          },
          "TemplateURLPrefix": {
            "Ref": "TemplateURLPrefix"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "apps/security_groups/etcd_security.json"
            ]
          ]
        },
        "TimeoutInMinutes": "5"
      }
    },
    "Instances": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "LogglyToken": {
            "Ref": "LogglyToken"
          },
          "InstanceSecurityGroups": {
            "Fn::Join": [
              ",",
              [
                {
                  "Fn::GetAtt": [
                    "Security",
                    "Outputs.InstanceSecurityGroup"
                  ]
                },
                {
                  "Ref": "InfrastructureInternalBastionSecurityGroup"
                }
              ]
            ]
          },
          "LoadBalancerSecurityGroup": {
            "Fn::GetAtt": [
              "Security",
              "Outputs.LoadBalancerSecurityGroup"
            ]
          },
          "ApplicationName": {
            "Ref": "ApplicationName"
          },
          "AvailabilityZones": {
            "Ref": "AvailabilityZones"
          },
          "Subnets": {
            "Ref": "InfrastructureVPCPrivateSubnets"
          },
          "NewRelicToken": {
            "Ref": "NewRelicToken"
          },
          "Scheme": "internal",
          "InstanceType": "c4.large",
          "ImageId": "ami-a64a1dce",
          "MinSize": "6",
          "MaxSize": "6",
          "DesiredCapacity": "6",
          "DeployMaxBatchSize": "5",
          "DeployMinInstancesInService": "5",
          "InstancePort": "4001",
          "InstanceHealthCheck": "/version",
          "UserData": {
            "Fn::Join": [
              "",
              [
                "HOST_IP=$(hostname --all-ip-addresses | awk '{print $1}')\n",
                "docker run",
                " -d",
                " --restart=always",
                " --name ",
                {
                  "Ref": "ApplicationName"
                },
                " -e HOST_IP=$HOST_IP",
                " -e ETCD_DISCOVERY=https://discovery.etcd.io/3eef4c90837457920e8a413f4eba682d",
                " -p 4001:4001 -p 7001:7001 -p 2379:2379 -p 2380:2380",
                " sgarlick987/etcd:latest"
              ]
            ]
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "apps/web/web_autoscaling.json"
            ]
          ]
        },
        "TimeoutInMinutes": "10"
      }
    }
  }
}