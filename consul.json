{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "v1.0 Creates a Consul service",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment to launch services into.",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "8",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "Can contain 4 to 8 lower case alphanumeric characters."
    },
    "AvailabilityZones": {
      "Description": "AvailabilityZones to launch networking stacks into.",
      "Type": "String"
    },
    "ApplicationName": {
      "Type": "String"
    },
    "LogglyToken": {
      "Type": "String"
    },
    "NewRelicToken": {
      "Type": "String"
    },
    "PrivateInternalHostedZone": {
      "Description": "Route53 Private Internal Hosted Zone for VPC.",
      "Type": "String"
    },
    "PrivateInternalDomain": {
      "Type": "String"
    },
    "InfrastructureVPCPrivateSubnets": {
      "Description": "Subnets to launch app into.",
      "Type": "String"
    },
    "InfrastructureVPC": {
      "Description": "VPC to launch this subnet into.",
      "Type": "AWS::EC2::VPC::Id"
    },
    "TemplateURLPrefix": {
      "Type": "String"
    },
    "InfrastructureInternalBastionSecurityGroup": {
      "Type": "String"
    }
  },
  "Resources": {
    "Security": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "Vpc": {
            "Ref": "InfrastructureVPC"
          },
          "ApplicationName": {
            "Ref": "ApplicationName"
          },
          "TemplateURLPrefix": {
            "Ref": "TemplateURLPrefix"
          },
          "BastionSecurityGroup": {
            "Ref": "InfrastructureInternalBastionSecurityGroup"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "apps/security_groups/consul_security.json"
            ]
          ]
        },
        "TimeoutInMinutes": "5"
      }
    },
    "InstanceProfile": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "apps/profiles/consul_profile.json"
            ]
          ]
        },
        "TimeoutInMinutes": "5"
      }
    },
    "DNSRecord": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "ApplicationName": {
            "Ref": "ApplicationName"
          },
          "HostedZoneId": {
            "Ref": "PrivateInternalHostedZone"
          },
          "HostedZoneName": {
            "Ref": "PrivateInternalDomain"
          },
          "LoadBalancerScheme": "internal",
          "LoadBalancerDNSName": {
            "Fn::GetAtt": [
              "Instances",
              "Outputs.LoadBalancerDNSName"
            ]
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "apps/web/web_record_set.json"
            ]
          ]
        },
        "TimeoutInMinutes": "5"
      }
    },
    "Instances": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "LogglyToken": {
            "Ref": "LogglyToken"
          },
          "InstanceSecurityGroups": {
            "Fn::Join": [
              ",",
              [
                {
                  "Fn::GetAtt": [
                    "Security",
                    "Outputs.InstanceSecurityGroup"
                  ]
                },
                {
                  "Ref": "InfrastructureInternalBastionSecurityGroup"
                }
              ]
            ]
          },
          "InstanceProfile": {
            "Fn::GetAtt": [
              "InstanceProfile",
              "Outputs.InstanceProfile"
            ]
          },
          "LoadBalancerSecurityGroup": {
            "Fn::GetAtt": [
              "Security",
              "Outputs.LoadBalancerSecurityGroup"
            ]
          },
          "ApplicationName": {
            "Ref": "ApplicationName"
          },
          "AvailabilityZones": {
            "Ref": "AvailabilityZones"
          },
          "Subnets": {
            "Ref": "InfrastructureVPCPrivateSubnets"
          },
          "NewRelicToken": {
            "Ref": "NewRelicToken"
          },
          "Scheme": "internal",
          "InstanceType": "m3.medium",
          "ImageId": "ami-f8fca790",
          "MinSize": "6",
          "MaxSize": "6",
          "DesiredCapacity": "6",
          "DeployMaxBatchSize": "1",
          "DeployMinInstancesInService": "5",
          "InstancePort": "8500",
          "InstanceHealthCheck": "/v1/agent/self",
          "HealthCheckGracePeriod": "60",
          "Cooldown": "30",
          "UpdatePauseTime": "PT3M1S"
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "apps/web/web_autoscaling.json"
            ]
          ]
        },
        "TimeoutInMinutes": "10"
      }
    }
  }
}